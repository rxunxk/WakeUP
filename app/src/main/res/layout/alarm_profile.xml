<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_margin="5dp"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtName"
        android:background="@drawable/custom_border"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txtHOUR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="@string/txtHours"
        android:textSize="40sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/txtColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@id/txtHOUR"
        android:text="@string/txtColon"
        android:textSize="30sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/txtMins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/txtColon"
        android:text="@string/txtMinutes"
        android:textSize="40sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/txtTimeZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@id/txtMins"
        android:text="AM"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRepeatDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtRepeat"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/txtHOUR" />

    <Switch
        android:id="@+id/onOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtMode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@id/onOff"
        android:background="@drawable/circular_background"
        android:gravity="center"
        android:text="@string/txtMode"
        android:textSize="22sp"
        app:fontFamily="casual" />

</RelativeLayout>